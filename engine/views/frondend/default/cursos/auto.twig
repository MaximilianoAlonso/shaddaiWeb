<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>{{cursos.extra_cursos['meta']['titulo'] }}</title>
    <meta name="description" content="{{cursos.extra_cursos['meta']['descripcion'] }}" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{cursos.extra_cursos['meta']['titulo'] }}" />
    <meta property="og:site_name" content="{{config.facebook_site_name}}" />
    <meta property="og:image" content="{{cursos.photo_small_cursos}}" />
    <meta property="og:locale" content="{{config.facebook_locale}}" />
    <meta property="og:description" content="{{cursos.extra_cursos['meta']['descripcion'] }}" />
    <meta property="og:url" content="{{request}}">
    {% include(recursos ~ '/recursos/recursos.twig') %}
</head>

<body class="detalle-cursos">
    {% include(recursos ~ '/recursos/header.twig') %}
    <main>
        <section id="header-page">
            <img src="{{cursos.photo_cursos['principal']['file']}}" alt="{{cursos.name_cursos}}">
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-12 col-xs-12 curso-text">
                            <h2 class="titulo text-left">
                                <strong>{{cursos.extra_cursos['texto']['pminititulo']}}</strong>
                                {{cursos.extra_cursos['texto']['ptitulo']}}
                            </h2>
                            <button type="button" class="btn btn-primary btn-purple"><i class="fal fa-shopping-cart"></i> Comprar curso</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="descripcion" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['pregunta1']}}</h2>
                        <p class="subtitulo text-left">{{cursos.extra_cursos['texto']['respuesta1']}}</p>
                    </div>
                </div>
            </div>
        </section>
        <section id="resultado" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['pregunta2']}}</h2>
                        {{cursos.extra_cursos['texto']['respuesta2'] | raw}}
                    </div>
                </div>
            </div>
        </section>
        <section id="beneficios" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['beneficios1']}}</h2>
                    </div>
                </div>
                <div class="row mt-30  d-flex justify-content-center">
                    <div class="col-md-7 col-xs-12">
                        <div class="row">
                            <div class="col-md-12 col-xs-12 iconos">
                                {{cursos.extra_cursos['texto']['beneficios2'] | raw}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-xs-12">
                        <img src="{{theme}}/images/cursos/beneficios.png" alt="">
                    </div>
                </div>
            </div>
        </section>
        <section id="contenido-progama" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['cprograma1']}}</h2>
                    </div>
                </div>
                <div class="row mt-30 programa">
                    <div class="col-programa col-md-12 col-xs-12">
                        {{cursos.extra_cursos['texto']['cprograma2'] | raw}}
                    </div>
                </div>
            </div>
        </section>
        <section id="preguntas-frecuentes" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">Preguntas Frecuentes</h2>
                    </div>
                </div>
                <div class="row mt-30">
                    <div class="col-md-12 col-xs-12">
                        <div class="accordion" id="accordionExample">
                            {% if cursos.extra_cursos['texto']['pfrecuente1'] | trim  != "" and cursos.extra_cursos['texto']['pfrespuesta1'] | trim != "" %}
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link btn-block text-left btn-purple" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            <i class="fas fa-square-full"></i> {{cursos.extra_cursos['texto']['pfrecuente1']}}
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body">
                                        {{cursos.extra_cursos['texto']['pfrespuesta1'] | raw}}
                                    </div>
                                </div>
                            </div>
                            {% endif %}
