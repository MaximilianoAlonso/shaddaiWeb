        <section id="condiciones-compra" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['compra1']}}</h2>
                        <p class="subtitulo text-left">{{cursos.extra_cursos['texto']['compra2'] }}</p>
                    </div>
                </div>
            </div>
        </section>
        <section id="formas-pago" class="padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="titulo text-left">{{cursos.extra_cursos['texto']['pago1']}}</h2>
                        {{cursos.extra_cursos['texto']['pago2'] | raw}}
                    </div>
                </div>
                <div class="row mt-30 justify-content-center">
                    <div class="col-md-5 col-xs-12 pago text-center transferencia">
                        <div class="row">
                            <div class="col-md-12 col-xs-12">
                                <h3>{{cursos.extra_cursos['texto']['transferencia1']}}</h3>
