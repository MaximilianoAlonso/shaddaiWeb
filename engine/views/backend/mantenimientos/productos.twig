<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<title>{{content.title}}  :: {{config.system}}</title>
	{% include(admin ~ '/recursos/recursos.twig') %}
</head>
<body>
	<div id="wrapper">
		{% include(admin ~ '/recursos/silebar.twig') %}
		<div id="page-wrapper" class="gray-bg">
			{% include(admin ~ '/recursos/header.twig') %}
			<div class="row wrapper border-bottom white-bg page-heading">
				<div class="col-lg-8">
					<h2>{{content.title}}</h2>
					<ol class="breadcrumb">
						<li>
							<a href="{{content.back}}">{{content.sector}}</a>
						</li>
						<li class="active">
							<strong>{{content.cabezado}}</strong>
						</li>
					</ol>
				</div>
				<div class="col-lg-4">
				</div>
			</div>

			<div class="wrapper wrapper-content">
				<div class="row">
					<div class="col-lg-12">
						<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
							<div class="tabs-container">
								<ul class="nav nav-tabs">
									<li class="active" class=""><a data-toggle="tab" href="#tab-1">Configuración</a></li>
									<li class=""><a data-toggle="tab" href="#tab-2">Tamaños</a></li>
								</ul>
								<div class="tab-content panel-body">
									<div id="tab-1" class="tab-pane active">
										<div class="form-group">
											<div class="col-md-3">
												<label class="form-label">¿Lineas?</label>
												<select name="json[view][lineas]" class="form-control">
													{{functions.displayOption(json['view']['lineas']) | raw}}
												</select>
											</div>
											<div class="col-md-3">
												<label class="form-label">¿Categorias?</label>
												<select name="json[view][categorias]" class="form-control">
													{{functions.displayOption(json['view']['categorias']) | raw}}
												</select>
											</div>
											<div class="col-md-3">
												<label class="form-label">¿Sub-Categorias?</label>
												<select name="json[view][subcategorias]" class="form-control">
													{{functions.displayOption(json['view']['subcategorias']) | raw}}
												</select>
											</div>
											<div class="col-md-3">
												<label class="form-label">¿Imagenes?</label>
												<select name="json[view][imagenes]" class="form-control">
													{{functions.displayOption(json['view']['imagenes']) | raw}}
												</select>
											</div>
										</div>
									</div>
									<div id="tab-2" class="tab-pane">
										<div class="form-group">
											<div class="col-md-12">
												<h2>Lineas:</h2>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-3">
												<label class="form-label">Tamaño Máximo</label>
												<div class="input-group">
													<input type="text" name="json[lineas][size]" class="form-control" value="{{json['lineas']['size']}}"  required val-type="number">
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<h2>Categorias:</h2>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-3">
												<label class="form-label">Tamaño Máximo</label>
												<div class="input-group">
													<input type="text" name="json[categorias][size]" class="form-control" value="{{json['categorias']['size']}}"  required val-type="number">
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<h2>Subcategorias:</h2>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-3">
												<label class="form-label">Tamaño Máximo</label>
												<div class="input-group">
													<input type="text" name="json[subcategorias][size]" class="form-control" value="{{json['subcategorias']['size']}}"  required val-type="number">
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<h2>Productos:</h2>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-3">
												<label class="form-label">Tamaño Máximo</label>
												<div class="input-group">
													<input type="text" name="json[productos][size][max]" class="form-control" value="{{json['productos']['size']['max']}}"  required val-type="number">
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-md-3">
												<label class="form-label">Tamaño Mínimo</label>
												<div class="input-group">
													<input type="text" name="json[productos][size][min]" class="form-control" value="{{json['productos']['size']['min']}}"  required val-type="number">
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>

					</div>
				</div>
			</div>

			{% include(admin ~ '/recursos/footer.twig') %}
		</div>
	</div>
	{% include(admin ~ '/recursos/java.twig') %}
</body>
</html>