<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<title>{{content.title}}  :: {{config.system}}</title>
	{% include(admin ~ '/recursos/recursos.twig') %}
</head>
<body>
	<div id="wrapper">
		{% include(admin ~ '/recursos/silebar.twig') %}
		<div id="page-wrapper" class="gray-bg">
			{% include(admin ~ '/recursos/header.twig') %}
			<div class="row wrapper border-bottom white-bg page-heading">
				<div class="col-lg-8">
					<h2>{{content.title}}</h2>
					<ol class="breadcrumb">
						<li>
							<a href="{{content.back}}">{{content.sector}}</a>
						</li>
						<li class="active">
							<strong>{{content.cabezado}}</strong>
						</li>
					</ol>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
			<div class="wrapper wrapper-content">
				<div class="row">
					<div class="col-lg-12">
						{% if args['type'] == 'orden' %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
									<p>Para ordenar es necesario arrastrar.</p>
									<div class="form-group">
										<div class="col-md-6">
											{% set listado	= eventos.data() %}
											{% if listado |length > 0  %}
											<input type="hidden" name="orden" class="form-control" >
											<div class="dd orden" id="nestable">
												<ol class="dd-list" >
													{% for item in listado %}
													<li class="dd-item " data-id="{{item.id}}">
														<div class="dd-handle" style="overflow: hidden;">
															<div class="pull-right">
																<img src="{{item.photo_small}}" alt="{{item.photo_name}}" style="width: 150px;">
															</div>
															<div class="pull-left">
																{{item.name}}
															</div>
														</div>
													</li>
													{% endfor %}
												</ol>
											</div>
											{% endif %}
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						{% elseif args['type'] == 'agregar' or args['type'] == 'editar' %}

						<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
							<div class="tabs-container">
								<ul class="nav nav-tabs">
									<li class="active" class=""><a data-toggle="tab" href="#tab-1">Configuración</a></li>
									<li class=""><a data-toggle="tab" href="#tab-2">Website</a></li>
									<li class=""><a data-toggle="tab" href="#tab-3">Metas</a></li>
								</ul>
								<div class="tab-content panel-body">
									<div id="tab-1" class="tab-pane active">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Foto</label>
												<span>(Máx. de {{ceventos.eventos.size.max}}px)</span>
												<div id="view-img">
													<span class="user_img_big banner_big" style="background-image:url({{eventos.photo_eventos}})"></span>
													<input type="hidden" name="photo_eventos" value="{{eventos.photo_eventos_name}}" />
													<span id="sub_img" class="btn btn-default">
														<span class="fa fa-picture-o "></span>
														<span>Cambiar foto...</span>
														<input type="file" id="previmage" name="fotos">
													</span>
													<span class="user_img_big banner_big prevdemo"></span>
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Nombre o Descripción</label>
												<input type="text" name="name_eventos" class="form-control" value="{{eventos.name_eventos}}" val-type="standar" required>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">SEO</label>
												<input type="text" name="seo_eventos" class="form-control" value="{{eventos.seo_eventos}}"  required>
											</div>
										</div>
										<div class="form-group">
											{% if ceventos.view.lineas == 1 %}
											<div class="col-md-3">
												<label class="form-label">¿Lineas?</label>
												<select name="id_lineas" class="form-control">
													{{eventos_lineas.select(eventos.id_lineas) | raw}}
												</select>
											</div>
											{% endif %}
											{% if ceventos.view.categorias == 1 %}
											<div class="col-md-3">
												<label class="form-label">¿Categorias?</label>
												<select name="id_categorias" class="form-control">
													{{eventos_categorias.select(eventos.id_categorias, eventos.id_lineas) | raw}}
												</select>
											</div>
											{% endif %}
											{% if ceventos.view.subcategorias == 1 %}
											<div class="col-md-3">
												<label class="form-label">¿Sub-Categorias?</label>
												<select name="id_subcategorias" class="form-control">
													{{eventos_subcategorias.select(eventos.id_subcategorias, eventos.id_categorias) | raw}}
												</select>
											</div>
											{% endif %}
											<div class="col-md-3">
												<label class="form-label">¿Activo?</label>
												<select name="active_eventos" class="form-control">
													{{functions.displayOption(eventos.active_eventos) | raw}}
												</select>
											</div>
										</div>
									</div>
									<div id="tab-2" class="tab-pane">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Comentario</label>
												<textarea name="extra[texto][comentario]" class="form-control summernote">
													{{eventos.extra_eventos['texto']['comentario'] | raw}}
												</textarea>
											</div>
										</div>
									</div>
									<div id="tab-3" class="tab-pane">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Titulo</label>
												<input type="text" name="extra[meta][titulo]" class="form-control" value="{{eventos.extra_eventos['meta']['titulo'] }}" required>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-6">
												<label class="form-label">Descripción</label>
												<textarea name="extra[meta][descripcion]" class="form-control" rows="5" required>{{eventos.extra_eventos['meta']['descripcion'] }}</textarea>
											</div>
											<div class="col-md-6">
												<label class="form-label">Palabras Claves</label>
												<textarea name="extra[meta][keywords]" class="form-control" rows="5" >{{eventos.extra_eventos['meta']['keywords'] }}</textarea>
											</div>
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
						{% else %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<table  id="datatable" class="table table-striped table-bordered dt-responsive nowrap  no-xls orden" >
									<thead>
										<tr>
											<th>Nombre o Descripción</th>
											{% if ceventos.view.lineas == 1 %}
											<th width="5%">Lineas</th>
											{% endif %}
											{% if ceventos.view.categorias == 1 %}
											<th width="5%">Categorias</th>
											{% endif %}
											{% if ceventos.view.subcategorias == 1 %}
											<th width="5%">Sub-Categorias</th>
											{% endif %}
											<th width="5%">Estatus</th>
											<th width="5%">Edición</th>
										</tr>
									</thead>
									<tbody>
									</tbody>
								</table>
							</div>
						</div>
						{% endif %}

					</div>
				</div>
			</div>
			{% include(admin ~ '/recursos/footer.twig') %}
		</div>
	</div>
	{% include(admin ~ '/recursos/java.twig') %}
	{% if args['type'] == 'agregar' or args['type'] == 'editar' %}
	{% include(admin ~ '/eventos/eventos.script.twig') %}
	{% endif %}
	{% if args['type'] == 'orden' %}
	<script src="{{backend}}/plugins/nestable/jquery.nestable.js"></script>
	<script>
		$(function(){
			var updateOutput = function (e) {
				var list = e.length ? e : $(e.target),
				output = list.data('output');
				if (window.JSON) {
                     output.val(window.JSON.stringify(list.nestable('serialize')));//, null, 2));
                 } else {
                 	output.val('JSON browser support required for this demo.');
                 }
             };
             $('#nestable').nestable({
             	group: 1,
             	maxDepth: 1
             }).on('change', updateOutput);
             updateOutput($('#nestable').data('output', $('[name=orden]')));
             $('#nestable-menu').on('click', function (e) {
             	var target = $(e.target),
             	action = target.data('action');
             	if (action === 'expand-all') {
             		$('.dd').nestable('expandAll');
             	}
             	if (action === 'collapse-all') {
             		$('.dd').nestable('collapseAll');
             	}
             });
         });
     </script>
     {% endif %}
 </body>
 </html>