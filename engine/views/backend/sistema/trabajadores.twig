<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<title>{{content.title}}  :: {{config.system}}</title>
	{% include(admin ~ '/recursos/recursos.twig') %}
</head>
<body>
	<div id="wrapper">
		{% include(admin ~ '/recursos/silebar.twig') %}
		<div id="page-wrapper" class="gray-bg">
			{% include(admin ~ '/recursos/header.twig') %}
			<div class="row wrapper border-bottom white-bg page-heading">
				<div class="col-lg-8">
					<h2>{{content.title}}</h2>
					<ol class="breadcrumb">
						<li>
							{{content.sector2}}
						</li>
						<li>
							<a href="{{content.back}}">{{content.sector}}</a>
						</li>
						<li class="active">
							<strong>{{content.cabezado}}</strong>
						</li>
					</ol>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
			<div class="wrapper wrapper-content">
				<div class="row">
					<div class="col-lg-12">
						{% if args['type'] == 'agregar' or args['type'] == 'editar' %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
									<div class="form-group">
										<div class="col-md-12">
											<label class="form-label">Foto de Trabajador</label>
											<span>(90x90px)</span>
											<div id="view-img">
												<span class="user_img_big" style="background-image:url({{trabajadores.thumbs}})"></span>
												<span id="sub_img" class="btn btn-default">
													<span class="fa fa-picture-o "></span>
													<span>Cambiar foto...</span>
													<input type="file" id="previmage" name="fotos">
												</span>
												<span class="user_img_big prevdemo"></span>
											</div>
										</div>
									</div>


									<div class="form-group">
										<div class="col-sm-6">
											<label for="FullName">Nombres</label>
											<input type="text" class="form-control" name="nombre" value="{{trabajadores.nombre}}" val-type="letters" required>
										</div>
										<div class="col-sm-6">
											<label for="FullName">Apellidos</label>
											<input type="text" class="form-control" name="apellidos" value="{{trabajadores.apellidos}}" val-type="letters" required>
										</div>
									</div>

									<div class="form-group">
										<div class="col-sm-3">
											<label for="dni">Doc. de Identidad</label>
											<input type="text" class="form-control" name="worker_dni" value="{{trabajadores.worker_dni}}" maxlength="8" {{dis}} val-type="number" val-length="[8,8]" required>
										</div>

										<div class="col-sm-3">
											<label for="Area">Area</label>
											<select name="id_area" required>
												{{areas.select(trabajadores.id_area) | raw}}
											</select>
										</div>

										<div class="col-sm-3">
											<label for="Email">Email</label>
											<input type="email" class="form-control" name="email" value="{{trabajadores.email}}" maxlength="254" val-type="email" required>
										</div>

										<div class="col-sm-3">
											<label for="cellphone">Celular</label>
											<input type="text" class="form-control" name="cellphone" value="{{trabajadores.cellphone}}" maxlength="9" val-type="number" val-length="[9,9]">
										</div>
									</div>

									<div class="form-group">
										<div class="col-sm-6">
											<label for="vehiculo">Vehículo, Marca, Placa</label>
											<input type="text" class="form-control" name="vehiculo" value="{{trabajadores.vehiculo}}" maxlength="200">
										</div>
										<div class="col-sm-6">
											<label for="placa">Lic. de Conducir N°</label>
											<input type="text" class="form-control" name="licencia" value="{{trabajadores.licencia}}" maxlength="200">
										</div>
									</div>

									<div class="form-group">
										<div class="col-md-12">
											<label for="address">Dirección</label>
											<input type="text" class="form-control" name="address" value="{{trabajadores.address}}" maxlength="200" val-type="address">
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						{% else %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<table  id="datatable" class="table table-striped table-bordered dt-responsive nowrap  no-xls" >
									<thead>
										<tr>
											<th width="5%">Doc. Identidad</th>
											<th>Nombre y Apellidos</th>
											<th width="5%">Email</th>
											<th width="5%">Celular</th>
											<th width="5%">Area</th>
											<th width="5%">Edición</th>
										</tr>
									</thead>
									<tbody>
									</tbody>
								</table>
							</div>
						</div>
						{% endif %}

					</div>
				</div>
			</div>
			{% include(admin ~ '/recursos/footer.twig') %}
		</div>
	</div>
	{% include(admin ~ '/recursos/java.twig') %}
</body>
</html>