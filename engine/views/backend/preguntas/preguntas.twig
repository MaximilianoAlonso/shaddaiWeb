<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<title>{{content.title}}  :: {{config.system}}</title>
	{% include(admin ~ '/recursos/recursos.twig') %}
</head>
<body>
	<div id="wrapper">
		{% include(admin ~ '/recursos/silebar.twig') %}
		<div id="page-wrapper" class="gray-bg">
			{% include(admin ~ '/recursos/header.twig') %}
			<div class="row wrapper border-bottom white-bg page-heading">
				<div class="col-lg-8">
					<h2>{{content.title}}</h2>
					<ol class="breadcrumb">
						<li>
							<a href="{{content.back}}">{{content.sector}}</a>
						</li>
						<li class="active">
							<strong>{{content.cabezado}}</strong>
						</li>
					</ol>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
			<div class="wrapper wrapper-content">
				<div class="row">
					<div class="col-lg-12">
						{% if args['type'] == 'orden' %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
									<p>Para ordenar es necesario arrastrar.</p>
									<div class="form-group">
										<div class="col-md-4">
											{% set listado = preguntas.data() %}
											{% if listado |length > 0  %}
											<input type="hidden" name="preguntas" class="form-control" >
											<div class="dd orden preguntas" id="nestable">
												<ol class="dd-list" >
													{% for item in listado %}
													<li class="dd-item " data-id="{{item.id}}">
														<div class="dd-handle">
															{{item.name}}
														</div>
													</li>
													{% endfor %}
												</ol>
											</div>
											{% endif %}
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						{% elseif args['type'] == 'agregar' or args['type'] == 'editar' %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
									<div class="form-group">
										<div class="col-md-9">
											<label class="form-label">Nombre</label>
											<input type="text" name="name_preguntas" class="form-control" value="{{preguntas.name_preguntas}}" val-type="standar" required>
										</div>
										<div class="col-sm-3">
											<label for="active">¿Activo?</label>
											<select name="activo_preguntas">
												{{functions.displayOption(preguntas.activo_preguntas) | raw}}
											</select>
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						{% else %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<table  id="datatable" class="table table-striped table-bordered dt-responsive nowrap orden no-xls" >
									<thead>
										<tr>
											<th>Nombre o Descripción</th>
											<th width="5%">Estatus</th>
											<th width="5%">Edición</th>
										</tr>
									</thead>
									<tbody>
									</tbody>
								</table>
							</div>
						</div>
						{% endif %}

					</div>
				</div>
			</div>
			{% include(admin ~ '/recursos/footer.twig') %}
		</div>
	</div>
	{% include(admin ~ '/recursos/java.twig') %}
	{% if args['type'] == 'orden' %}
	<script src="{{backend}}/plugins/nestable/jquery.nestable.js"></script>
	<script>
		$(function(){
			var updateOutput = function (e) {
				var list = e.length ? e : $(e.target),
				output = list.data('output');
				if (window.JSON) {
                     output.val(window.JSON.stringify(list.nestable('serialize')));//, null, 2));
                 } else {
                 	output.val('JSON browser support required for this demo.');
                 }
             };

             $('#nestable.preguntas').nestable({
             	group: 1,
             	maxDepth: 1
             }).on('change', updateOutput);
             updateOutput($('#nestable.preguntas').data('output', $('[name=preguntas]')));

         });
     </script>
     {% endif %}
 </body>
 </html>