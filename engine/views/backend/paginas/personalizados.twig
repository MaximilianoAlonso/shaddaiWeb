<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<title>{{content.title}}  :: {{config.system}}</title>
	{% include(admin ~ '/recursos/recursos.twig') %}
</head>
<body>
	<div id="wrapper">
		{% include(admin ~ '/recursos/silebar.twig') %}
		<div id="page-wrapper" class="gray-bg">
			{% include(admin ~ '/recursos/header.twig') %}
			<div class="row wrapper border-bottom white-bg page-heading">
				<div class="col-lg-8">
					<h2>{{content.title}}</h2>
					<ol class="breadcrumb">
						<li>
							{{content.sector2}}
						</li>
						<li>
							<a href="{{content.back}}">{{content.sector}}</a>
						</li>
						<li class="active">
							<strong>{{content.cabezado}}</strong>
						</li>
					</ol>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
			<div class="wrapper wrapper-content">
				<div class="row">
					<div class="col-lg-12">
						{% if args['type'] == 'agregar' or args['type'] == 'editar' %}
						<form class="form-horizontal " enctype="multipart/form-data" method="post" parsley-validate novalidate>
							<div class="tabs-container">
								<ul class="nav nav-tabs">
									<li class="active" class=""><a data-toggle="tab" href="#tab-1">Configuraciones</a></li>
									<li class=""><a data-toggle="tab" href="#tab-2">Website</a></li>
									<li class=""><a data-toggle="tab" href="#tab-3">Metas</a></li>
								</ul>
								<div class="tab-content panel-body">
									<div id="tab-1" class="tab-pane active">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Nombre</label>
												{% if args['type'] == 'editar' %}
												<span><a href="{{url}}/{{personalizados.seo_personalizados}}" target="_blank">(Visualizar)</a></span>
												{% endif %}
												<input type="text" name="name_personalizados" class="form-control" value="{{personalizados.name_personalizados}}" val-type="standar" required>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-9">
												<label class="form-label">Seo</label>
												<input type="text" name="seo_personalizados" class="form-control" value="{{personalizados.seo_personalizados}}"  required>
											</div>
											<div class="col-md-3">
												<label class="form-label">¿Activo?</label>
												<select name="activo_personalizados">
													{{functions.displayOption(personalizados.activo_personalizados) | raw}}
												</select>
											</div>
										</div>

									</div>
									<div id="tab-2" class="tab-pane">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Contenido</label>
												<textarea name="contenidos_personalizados" class="form-control summernote" rows="5" >{{personalizados.contenidos_personalizados | raw  }}</textarea>
											</div>
										</div>
									</div>
									<div id="tab-3" class="tab-pane">
										<div class="form-group">
											<div class="col-md-12">
												<label class="form-label">Titulo</label>
												<input type="text" name="titulo_personalizados" class="form-control" value="{{personalizados.titulo_personalizados}}" required>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-6">
												<label class="form-label">Descripción</label>
												<textarea name="descripcion_personalizados" class="form-control" rows="5" required>{{personalizados.descripcion_personalizados}}</textarea>
											</div>
											<div class="col-md-6">
												<label class="form-label">Palabras Claves</label>
												<textarea name="keywords_personalizados" class="form-control" rows="5" >{{personalizados.keywords_personalizados}}</textarea>
											</div>
										</div>
									</div>
									<div class="hr-line-dashed"></div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="pull-right">
												<a  href="{{content.back}}" class="btn btn-white" type="submit">Regresar</a>
												<button name="btn-save" class="btn btn-primary" type="submit">Guardar</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
						{% else %}
						<div class="ibox float-e-margins">
							<div class="ibox-title">
								<h5>{{content.title}}</h5>
							</div>
							<div class="ibox-content">
								<table  id="datatable" class="table table-striped table-bordered dt-responsive nowrap  no-xls" >
									<thead>
										<tr>
											<th >Nombre</th>
											<th width="5%">Estatus</th>
											<th width="5%">Edición</th>
										</tr>
									</thead>
									<tbody>
									</tbody>
								</table>
							</div>
						</div>
						{% endif %}

					</div>
				</div>
			</div>
			{% include(admin ~ '/recursos/footer.twig') %}
		</div>
	</div>
	{% include(admin ~ '/recursos/java.twig') %}
</body>
</html>